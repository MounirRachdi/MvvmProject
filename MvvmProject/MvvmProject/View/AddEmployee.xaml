<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmProject.View.AddEmployee">
    
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Name" FontSize="Medium" />
            <Entry Text="{Binding emp.Name}" FontSize="Small" />
            <Label Text="Departement" FontSize="Medium" />
            <Entry Text="{Binding emp.Department}" FontSize="Small" Margin="0" />
            <Label Text="Choose Image" FontSize="Medium"/>
            
            <Button Clicked="Save_Clicked" Text="Save"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>