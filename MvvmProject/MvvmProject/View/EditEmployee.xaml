<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmProject.View.EditEmployee">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Name" FontSize="Medium" />
            <Entry x:Name="Name" FontSize="Small" />
            <Label Text="Departement" FontSize="Medium" />
            <Entry x:Name="Departement" FontSize="Small" Margin="0" />
            

            <Button Clicked="Save_Clicked" Text="Save"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>